package br.com.fiap.jpa.entity;

import java.sql.Blob;
import java.util.Calendar;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;


@Entity
@Table(name="TB_DEPARTAMENTO")
//sequenceName -> nome da sequencia no banco de dados
//name -> nome da sequencia no java, utilizado no @GeneratedValue
//allocationSize -> incremento
@SequenceGenerator(sequenceName = "SQ_TB_DEPARTAMENTO", name="depart", allocationSize = 1)
public class Departamento {

	@Id
	@Column(name="cd_departamento")
	@GeneratedValue(generator = "depart", strategy = GenerationType.SEQUENCE)
	private int codigo;
	
	@Column(name = "nm_departamento", nullable = false, length = 20)
	private String nome;
	
	@Column(name="dt_criacao", nullable = false)
	private Calendar dataCriacao;
	
	@Column(name="nr_centro_curto", nullable = false)
	private int centroDeCusto;
	
	@Column(name="ds_segmento", nullable = false)
	private Enum segmento;
	
	@Column(name="fl_foto_diretor", nullable = false)
	private Blob fotoDiretor;
	
	
	
}
